<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="8dp"
    >

    <ImageView
        android:id="@+id/foodList_img"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginRight="15dp"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/foodList_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:textSize="16sp"
            android:text="食物名稱"
            android:textColor="@color/colorPrimary"
            android:paddingTop="5dp"
            />
        <TextView
            android:id="@+id/foodList_location"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="台中市南屯區"
            />
        <TextView
            android:id="@+id/foodList_deadline"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="期限：2020/05/27 20:00"
            />
        <TextView
            android:id="@+id/foodList_quantity"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="份數：10 份，可拆領"
            />
        <TextView
            android:id="@+id/foodList_leftQuantity"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="預估剩餘 3 份"
            />

    </LinearLayout>


</LinearLayout>