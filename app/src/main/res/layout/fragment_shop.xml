<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/shop_topArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shop_userPhoto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="96dp"
            android:src="@drawable/profile_img"
            app:civ_border_width="1dp"
            android:layout_marginRight="20dp"
            />
        <TextView
            android:id="@+id/shop_userName"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textColor="@color/colorSecondary"
            android:textSize="24sp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="累積點數"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="554"
                    android:textSize="24sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="折抵點數"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/useDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icon="@drawable/ic_shop_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    style="@style/IconOnlyButton"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/shop_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shop_topArea"
        tools:listitem="@layout/listview_store"
        android:padding="10dp"
        />

</RelativeLayout>